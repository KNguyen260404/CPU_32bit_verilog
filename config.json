    "CTS_SINK_CLUSTERING_SIZE": 20,
    "CTS_SINK_CLUSTERING_MAX_DIAMETER": 80,
    "CTS_CLK_MAX_WIRE_LENGTH": 80,
    "CTS_DISABLE_POST_PROCESSING": false,
    "CLOCK_TREE_SYNTH": true,
